<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="welcomeFragment"
                  type="com.example.android.bezmind.WelcomeFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bkg_blue">
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/bkgText2"
                android:background="@drawable/bkgtext2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/bkgText1"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bkgtext1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/gameName" app:layout_constraintStart_toStartOf="@+id/bkgText1"
                android:background="@drawable/bezmind"
                app:layout_constraintEnd_toEndOf="@+id/bkgText1"
                app:layout_constraintBottom_toBottomOf="@+id/bkgText1"
                android:layout_marginStart="64dp" android:layout_marginEnd="64dp"
                app:layout_constraintTop_toTopOf="@+id/bkgText1" android:layout_marginTop="128dp"
                android:contentDescription="@string/gameName" android:layout_marginBottom="64dp"/>
        <TextView
                android:text="@string/start_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startButton" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp" android:textSize="18sp" android:textColor="@color/white"
                android:shadowColor="#6BAAAAAA" android:shadowDx="6" android:shadowDy="6"
                android:shadowRadius="5"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_1" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintStart_toStartOf="@+id/bkgText1"
                app:layout_constraintVertical_bias="0.19" app:layout_constraintStart_toEndOf="@+id/bkgText2"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/spot_2"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_2" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.025"
                app:layout_constraintStart_toEndOf="@+id/spot_1" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_3"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_3" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/spot_2" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_4"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_4" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.110000014"
                app:layout_constraintStart_toEndOf="@+id/spot_3" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_5"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_5" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.159"
                app:layout_constraintStart_toEndOf="@+id/spot_4" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_6"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_6" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.120000005"
                app:layout_constraintStart_toEndOf="@+id/spot_5" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_8"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_7" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.07999998"
                app:layout_constraintStart_toEndOf="@+id/spot_8" app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/bkgText1"/>
        <View
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:id="@+id/spot_8" android:background="@drawable/around"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/bkgText1"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/startButton"
                app:layout_constraintVertical_bias="0.060000002"
                app:layout_constraintStart_toEndOf="@+id/spot_6" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spot_7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
